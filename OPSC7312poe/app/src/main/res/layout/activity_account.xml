<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">

    <!-- Header Layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#5DB075"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Settings Button -->
        <Button
            android:id="@+id/settingsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:background="?android:attr/selectableItemBackground"
            android:textColor="@android:color/white"
            android:layout_gravity="start" />

        <!-- User Name TextView (Centered) -->
        <TextView
            android:id="@+id/userName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Victoria Robertson"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:gravity="center" />

        <!-- Logout Button -->
        <Button
            android:id="@+id/logoutButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:background="?android:attr/selectableItemBackground"
            android:textColor="@android:color/white"
            android:layout_gravity="end" />
    </LinearLayout>

    <!-- Account Section Label -->
    <TextView
        android:id="@+id/accountLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Account"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#555"
        android:gravity="center"
        android:paddingTop="16dp" />

    <!-- Account Section Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Edit Profile Button -->
        <Button
            android:id="@+id/editProfileButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit Profile"
            android:background="?android:attr/selectableItemBackground"
            android:textColor="@android:color/black" />

        <!-- Security Button -->
        <Button
            android:id="@+id/securityButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Security"
            android:background="?android:attr/selectableItemBackground"
            android:textColor="@android:color/black"
            android:layout_marginTop="8dp" />

        <!-- Notifications Button -->
        <Button
            android:id="@+id/notificationsButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Notifications"
            android:background="?android:attr/selectableItemBackground"
            android:textColor="@android:color/black"
            android:layout_marginTop="8dp" />

        <!-- Privacy Button -->
        <Button
            android:id="@+id/privacyButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Privacy"
            android:background="?android:attr/selectableItemBackground"
            android:textColor="@android:color/black"
            android:layout_marginTop="8dp" />
    </LinearLayout>

    <!-- Support and About Section Label -->
    <TextView
        android:id="@+id/supportLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Support and About"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#555"
        android:gravity="center"
        android:paddingTop="16dp" />

    <!-- Support and About Section Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Help & Support Button -->
        <Button
            android:id="@+id/helpSupportButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Help &amp; Support"
            android:background="?android:attr/selectableItemBackground"
            android:textColor="@android:color/black" />

        <!-- Terms and Policies Button -->
        <Button
            android:id="@+id/termsPoliciesButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Terms and Policies"
            android:background="?android:attr/selectableItemBackground"
            android:textColor="@android:color/black"
            android:layout_marginTop="8dp" />
    </LinearLayout>

    <!-- Spacer to push the navbar to the bottom -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Navigation Bar Separator -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/black" />

    <!-- Navigation Bar -->
    <LinearLayout
        android:id="@+id/navigation_bar"
        android:layout_width="match_parent"
        android:layout_height="77dp"
        android:background="@android:color/white"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="8dp">

        <!-- Home Icon -->
        <ImageButton
            android:id="@+id/nav_home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:padding="8dp"
            android:scaleType="centerInside"
            android:src="@drawable/home" />

        <!-- Audio Icon -->
        <ImageButton
            android:id="@+id/nav_audio"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:padding="8dp"
            android:scaleType="centerInside"
            android:src="@drawable/audio" />

        <!-- Journal Icon -->
        <ImageButton
            android:id="@+id/nav_journal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:padding="8dp"
            android:scaleType="centerInside"
            android:src="@drawable/journal" />

        <!-- Profile Icon -->
        <ImageButton
            android:id="@+id/nav_profile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:padding="8dp"
            android:scaleType="centerInside"
            android:src="@drawable/profile" />
    </LinearLayout>

</LinearLayout>
