<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".MainActivity">

    <!-- Mood Prompt -->
    <TextView
        android:id="@+id/mood_prompt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/MoodPromps"
        android:gravity="center"
        android:textSize="24sp"
        android:layout_marginBottom="16dp" />

    <!-- Mood Icons Grid -->
    <GridLayout
        android:id="@+id/mood_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="5"
        android:rowCount="2"
        android:layout_gravity="center"
        android:padding="16dp">

        <!-- Mood icons -->
        <ImageView
            android:id="@+id/rad"
            android:layout_width="73dp"
            android:layout_height="73dp"
            android:layout_weight="1"
            android:contentDescription="@string/rad"
            android:src="@drawable/rad" />

        <ImageView
            android:id="@+id/good"
            android:layout_width="73dp"
            android:layout_height="73dp"
            android:layout_weight="1"
            android:contentDescription="@string/good"
            android:src="@drawable/good" />

        <ImageView
            android:id="@+id/meh"
            android:layout_width="73dp"
            android:layout_height="73dp"
            android:layout_weight="1"
            android:contentDescription="@string/meh"
            android:src="@drawable/meh" />

        <ImageView
            android:id="@+id/bad"
            android:layout_width="73dp"
            android:layout_height="73dp"
            android:layout_weight="1"
            android:contentDescription="@string/bad"
            android:src="@drawable/bad" />

        <ImageView
            android:id="@+id/awful"
            android:layout_width="73dp"
            android:layout_height="73dp"
            android:layout_weight="1"
            android:contentDescription="@string/awful"
            android:src="@drawable/awful" />
    </GridLayout>

    <!-- Save Mood Button -->
    <Button
        android:id="@+id/save_mood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save Mood"
        android:layout_gravity="center"
        android:layout_marginTop="16dp" />

    <!-- Logout Button -->
    <Button
        android:id="@+id/logout_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:layout_gravity="center"
        android:layout_marginTop="16dp" />

    <!-- Spacer to push navbar to the bottom -->
    <View
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:layout_weight="1" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/black" />
    <!-- Navigation Bar -->
    <LinearLayout
        android:id="@+id/navigation_bar"
        android:layout_width="match_parent"
        android:layout_height="77dp"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="8dp">

        <!-- Home Icon -->
        <ImageButton
            android:id="@+id/nav_home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:padding="8dp"
            android:scaleType="centerInside"
            android:src="@drawable/home" />

        <!-- Audio Icon -->
        <ImageButton
            android:id="@+id/nav_audio"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:padding="8dp"
            android:scaleType="centerInside"
            android:src="@drawable/audio" />

        <!-- Journal Icon -->
        <ImageButton
            android:id="@+id/nav_journal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:padding="8dp"
            android:scaleType="centerInside"
            android:src="@drawable/journal" />

        <!-- Profile Icon -->
        <ImageButton
            android:id="@+id/nav_profile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:padding="8dp"
            android:scaleType="centerInside"
            android:src="@drawable/profile" />
    </LinearLayout>

</LinearLayout>